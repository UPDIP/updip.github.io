<div style="background: #d1b192; margin-top: 2em; padding: 2em;">

  <div class="row">
    <div class="col-sm-12">


      <div class="row">
        <div class="col-sm-2 text-right">
          <%= image_tag(user.avatar.url, style: 'width: 100px', class: 'img-circle') -%>
        </div>
        <div class="col-sm-10">
          <h1> <%= user.username -%></h1>
        </div>
      </div>


      <div class="form-horizontal">

        <!-- Flattr Button -->
        <div class="form-group">
          <label for="flattrButton" class="col-sm-2 control-label">Flattr</label>
          <div class="col-sm-10">
            <a id="flattrButton" class="FlattrButton" style="display:none;"
               title="This is my title"
               rel="flattr;uid:<%= user.flattr -%>;category:text;tags:tag,tag2,tag3;"
               href="http://wp.local/?p=444">
            </a>
          </div>
        </div>

        <!-- Bitcoin Address -->
        <div class="form-group">
          <label for="bitcoinAddress" class="col-sm-2 control-label">Bitcoin</label>
          <div class="col-sm-10">
            <input type="text" id="bitcoinAddress" class="form-control" readonly value="<%= user.bitcoin_address -%>"/>
          </div>
        </div>

      </div>
    </div>
  </div>

</div>
